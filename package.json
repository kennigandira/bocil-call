{
    "name": "bocil-call",
    "version": "1.0.0",
    "description": "Simple video chat platform for two kids",
    "main": "index.js",
    "scripts": {
        "dev": "vite",
        "dev:local": "vite --config vite.config.dev.js",
        "dev:full": "concurrently \"bun run server:dev\" \"bun run dev:local\"",
        "build": "vite build",
        "build:dev": "vite build --config vite.config.dev.js",
        "build:prod": "vite build --config vite.config.prod.js",
        "preview": "vite preview",
        "preview:dev": "vite preview --port 4173",
        "serve": "vite preview",
        "server": "bun run server.js",
        "server:dev": "bun run server.dev.js",
        "server:node": "node server.js",
        "clean": "rm -rf dist dist-dev node_modules/.vite"
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^4.18.0",
        "socket.io": "^4.7.0",
        "socket.io-client": "^4.7.0",
        "vue": "^3.4.0",
        "ws": "^8.18.3"
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^4.5.0",
        "vite": "^5.0.0",
        "concurrently": "^8.2.0"
    },
    "keywords": [
        "video-chat",
        "webrtc",
        "vue",
        "kids"
    ],
    "author": "Parent/Developer",
    "license": "MIT"
}