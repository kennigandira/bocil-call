{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "api/socket.js",
            "use": "@vercel/node",
            "config": {
                "runtime": "nodejs20.x"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/socket",
            "dest": "/api/socket.js"
        },
        {
            "src": "/socket.io/(.*)",
            "dest": "/api/socket.js"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}